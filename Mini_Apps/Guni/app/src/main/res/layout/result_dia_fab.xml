<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Exam : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultDiaFabExamTV"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:textAlignment="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/resultDiaFabExamET"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:hint="End Sem" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text=" Marks : "
                android:layout_height="wrap_content"
                android:id="@+id/resultDiaFabMarksTV"
                android:layout_weight="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_width="112dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/resultDiaFabMarksObET"
                android:text="98"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp"
                android:layout_weight="3"
                android:width="50dp"
                android:layout_width="78dp" />

            <TextView
                android:text="/"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp"
                android:textAlignment="center"
                android:width="5dp"
                android:layout_width="33dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/resultDiaFabMarksTotalET"
                android:layout_weight="3"
                android:text="100"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp"
                android:width="50dp"
                android:layout_width="96dp" />

        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultDiaFabCancleButton"
            android:layout_weight="1" />

        <Button
            android:text="ADd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultDiaFabAddButton"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>