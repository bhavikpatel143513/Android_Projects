<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gamecodeschool.notetoself.SettingsActivity">

    <TextView
        android:text="@string/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/textViewSetting"
        android:textSize="24sp" />

    <TextView
        android:text="@string/sound_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSetting"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="31dp"
        android:id="@+id/textViewSound" />

    <CheckBox
        android:text="@string/sound_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSound"
        android:layout_alignStart="@+id/textViewSound"
        android:layout_marginTop="13dp"
        android:id="@+id/checkBoxSound" />

    <TextView
        android:text="@string/amims_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxSound"
        android:layout_alignStart="@+id/checkBoxSound"
        android:layout_marginTop="19dp"
        android:id="@+id/textViewAnimation" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAnimation"
        android:layout_alignStart="@+id/textViewAnimation"
        android:layout_marginTop="14dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:text="@string/rb_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioFast"
            android:layout_weight="1" />

        <RadioButton
            android:text="@string/rb_slow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioSlow"
            android:layout_weight="1" />

        <RadioButton
            android:text="@string/rb_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioNone"
            android:layout_weight="1" />
    </RadioGroup>
</RelativeLayout>
